{
  "AWSEBDockerrunVersion": 2,

  "containerDefinitions": [
      {
        "name": "client",
        "image": "andrey1961/multi-client",
        "hostname": "client",
        "essential": "false" 
      },
    {
        "name": "server",
        "image": "andrey1961/multi-server",
        "hostname": "api",
        "essential": "false"
    },
    {
        "name": "worker",
        "image": "andrey1961/multi-worker",
        "hostname": "worker",
        "essential": "false"
    },
    {
        "name": "nginx",
        "image": "andrey1961/multi-nginx",
        "hostname": "nginx",
        "essential": "true",
        "portMappings": [
            {
                "hostPort": 80,
                "containerPort": 80
            }
        ],
        "links": ["client","server"]
    }
  ]
}